                    </div>


                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div>
                            <button type="submit" class="btn btn-lg btn-alt-primary">
                                Create
                            </button>
                        </div>
                    </div>


                </form>
            </div>
        </div>
        <!-- END Catgory In Form -->
