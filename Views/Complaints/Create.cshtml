@model Examen_ASP.Net.Models.Complaint

@{
    ViewBag.Title = "Create";
}
<!-- Main Container -->
<main id="main-container">
    <!-- Category  Form -->
    <div class="row g-0 justify-content-center align-items-center">
        <div class="col-sm-8 col-xl-4">
            <form class="js-validation-signin" action="@Url.Action("Create", "Complaints")" method="POST">
                @Html.AntiForgeryToken()

                <div class="mb-4">
                    <input type="text" class="form-control form-control-lg form-control-alt py-3" name="Name" placeholder="Complaint ">
                </div>


                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div>
                        <button type="submit" class="btn btn-lg btn-alt-primary">
                            Send
                        </button>
                    </div>
                </div>


            </form>
        </div>
    </div>
    <!-- END Catgory In Form -->
</main>
